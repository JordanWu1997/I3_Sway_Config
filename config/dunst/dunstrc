# This dunst configuration is based on:
#   - https://github.com/a-schaefers/i3-wm-gruvbox-theme/blob/master/dunst/dunstrc
#   - https://github.com/Kaligule/dunst-config/blob/master/reload

[global]
    font = "DroidSansMono Nerd Font 12"
    allow_markup = yes
    format = "<b>%a:</b> <b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = right
     bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "0x0-25-25"
    transparency = 20
    idle_threshold = 120
    monitor = 2
    follow = mouse
    sticky_history = yes
    line_height = 0
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = "#585858"
    startup_notification = true

[frame]
    width = 2
    color = "#2e9ef4"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#282828"
    foreground = "#ffffff"
    timeout = 3

[urgency_normal]
background = "#282828"

foreground = "#ffffff"
    timeout = 15

[urgency_critical]
    background = "#282828"
    foreground = "#ffffff"
    timeout = 0
