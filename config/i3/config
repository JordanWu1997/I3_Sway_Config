# Start a terminal
#bindsym Ctrl+Return exec $terminal
bindsym $mod+Return exec $terminal

# Close (Kill) window
#bindsym $mod+Shift+c kill

# Kill focus window
bindsym $mod1+F4     kill
bindsym $mod+Shift+q kill

# Kill focus window with confirmation
set $close "Close the window? (q/y/n)"
bindsym $mod1+Shift+q mode $close
bindsym $mod+shift+c  mode $close
mode $close {
    bindsym y             kill; mode default
    bindsym q             kill; mode default
    bindsym $mod1+Shift+q kill; mode default
    bindsym $mod+Shift+c  kill; mode default
    bindsym Return        kill; mode default
    bindsym n             mode default
    bindsym Escape        mode default
}

