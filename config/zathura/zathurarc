### Settings from original zathurarc ###
set adjust-open "best-fit"
set pages-per-row 1
set font "DroidSansMono Nerd Font Bold 12"
set guioptions 'shv'
set selection-clipboard clipboard
set scroll-page-aware "true"
set sandbox none

### zathura-pywal ###
# Allow recolor
set recolor "true"

# Don't allow original hue when recoloring
set recolor-keephue "false"

# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

# Command line completion entries
set completion-fg "#bfbfbf"
set completion-bg "#000000"

# Command line completion group elements
set completion-group-fg "#115091"
set completion-group-bg "#000000"

# Current command line completion element
set completion-highlight-fg "#000000"
set completion-highlight-bg "#bfbfbf"

# Default foreground/background color
set default-bg rgba(0,0,0,0.7)

# Input bar
set inputbar-fg "#bfbfbf"
set inputbar-bg "#000000"

# Notification
set notification-fg "#bfbfbf"
set notification-bg "#000000"

# Error notification
set notification-error-fg "#bfbfbf"
set notification-error-bg "#404040"

# Warning notification
set notification-warning-fg "#bfbfbf"
set notification-warning-bg "#404040"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#bfbfbf"
set statusbar-bg "#000000"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#115091"
set highlight-active-color "#115091"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#bfbfbf"

# "Loading..." text
set render-loading-fg "#bfbfbf"
set render-loading-bg "#000000"

# Index mode
set index-fg "#bfbfbf"
set index-bg "#000000"

# Selected element in index mode
set index-active-fg "#000000"
set index-active-bg "#bfbfbf"