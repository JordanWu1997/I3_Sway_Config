conky.config = {
	own_window_transparent = true,
	use_xft = true,
	xftalpha = 1.0,
	own_window_argb_visual = true,
	own_window_argb_value = 0,
	double_buffer = true,
	alignment = 'bottom_left',
	background = true,
	border_width = 2,
	cpu_avg_samples = 2,
	default_color = '#FFFFFF',
	color2 = '#2e9ef4',
    default_outline_color = '#FFFFFF',
    default_shade_color = '#000000',
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = true,
	font = 'DroidSanMono Nerd Font:size=12',
	gap_x = 25,
	gap_y = 25,
	minimum_width = 280,
	maximum_width = 280,
	no_buffers = true,
	own_window = false,
    out_to_stderr = false,
    extra_newline = false,
    own_window = true,
    own_window_class = 'Conky',
	own_window_type = 'override',
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = false,
    show_graph_range = false,
	top_name_width = 16

}
conky.text = [[
${color}[System Command] ${hr 2}
${color2}open terminal ${color}[S]+[Enter]
${color2}system option ${color}[S]+[Esc]
${color2}reload i3 ${color}[S]+[r]
${color2}restart i3 ${color}[S]+[Shift]+[r]
${color2}application (rofi) ${color}[S]+[d]
${color2}window (rofi) ${color}[Alt]+[Shift]+[Tab]
${color}[Workspace / Container] ${hr 2}
${color2}navigate to WS ${color}[S]+[\#]
${color2}send focus to WS ${color}[S]+[Shift]+[\#]
${color2}kill focused window ${color}[S]+[Shift]+[q]
${color2}container split toggle ${color}[S]+[q]
${color2}container tabbed toggle ${color}[S]+[t]
${color2}container stacking toggle ${color}[S]+[s]
${color2}container tiling toggle ${color}[S]+[e]
${color2}fullscreen toggle ${color}[S]+[f]
${color2}navigate to ${color}[S]+[vim-key]
${color2}swap to ${color}[S]+[Shift]+[vim-key]
${color2}focus parent ${color}[S]+[a]
${color2}focus children ${color}[S]+[Shift]+[a]
${color}[Floating / Scratchpad] ${hr 2}
${color2}floating toggle ${color}[S]+[Shift]+[Space]
${color2}focus toggle ${color}[S]+[Space]
${color2}sticky toggle ${color}[S]+[Shift]+[s]
${color2}move to scratchpad ${color}[S]+[-]
${color2}move to foreground ${color}[S]+[=]
${color}[Function / Mode] ${hr 2}
${color2}gap mode ${color}[S]+[Shift]+[g]
${color2}titlebar mode ${color}[S]+[Shift]+[t]
${color2}mouse mode ${color}[S]+[Shift]+[m]
${color2}display mode ${color}[S]+[Shift]+[x]
${color2}redshift mode ${color}[S]+[Shift]+[z]
${color2}resize mode ${color}[Ctrl]+[Alt]+[r]
${color2}wallpaper mode ${color}[Ctrl]+[Alt]+[w]
${color2}theme mode ${color}[Ctrl]+[Alt]+[t]
${color}[Miscellaneous] ${hr 2}
${color2}quick resize ${color}[Ctrl]+[Alt]+[vim-key]
${color2}quick mark window ${color}[S]+[m]
${color2}goto window with mark ${color}[S]+w
${color2}swap window with mark ${color}[S]+p
]]
