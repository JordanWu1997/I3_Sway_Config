# Start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
bar {
        #status_command i3status
        id top-bar
        font pango:Inconsolata 11
        position top
        tray_output primary
        workspace_buttons yes
        status_command ~/.local/bin/bumblebee-status \
        -m title network_traffic cpu memory disk:home \
        pasink pasource brightness battery date time \
        -p home.path=/home time.format="%H:%M CW %V" \
        date.format="%a, %b %d %Y" memory.format='{percent:05.02f}%' \
        disk.format='{percent:05.02f}%' \
        -t dracula-powerline
        #-t gruvbox-powerline
}

# Status bar toggle, hide or show
bindsym $mod+b bar mode toggle
