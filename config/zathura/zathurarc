### Settings from original zathurarc ###
set adjust-open "best-fit"
set pages-per-row 1
set font "DroidSansMono Nerd Font Bold 12"
set guioptions 'shv'
set selection-clipboard clipboard
set scroll-page-aware "true"
set sandbox none

### zathura-pywal ###
# Allow recolor
set recolor "true"

# Don't allow original hue when recoloring
set recolor-keephue "false"

# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

# Command line completion entries
set completion-fg "#c2c2c2"
set completion-bg "#0b0b0e"

# Command line completion group elements
set completion-group-fg "#5E8FCA"
set completion-group-bg "#0b0b0e"

# Current command line completion element
set completion-highlight-fg "#0b0b0e"
set completion-highlight-bg "#c2c2c2"

# Default foreground/background color
set default-bg rgba(11,11,14,0.7)

# Input bar
set inputbar-fg "#c2c2c2"
set inputbar-bg "#0b0b0e"

# Notification
set notification-fg "#c2c2c2"
set notification-bg "#0b0b0e"

# Error notification
set notification-error-fg "#c2c2c2"
set notification-error-bg "#678EBC"

# Warning notification
set notification-warning-fg "#c2c2c2"
set notification-warning-bg "#678EBC"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#c2c2c2"
set statusbar-bg "#0b0b0e"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#5E8FCA"
set highlight-active-color "#5E8FCA"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#c2c2c2"

# "Loading..." text
set render-loading-fg "#c2c2c2"
set render-loading-bg "#0b0b0e"

# Index mode
set index-fg "#c2c2c2"
set index-bg "#0b0b0e"

# Selected element in index mode
set index-active-fg "#0b0b0e"
set index-active-bg "#c2c2c2"