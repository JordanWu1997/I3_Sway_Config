    bindsym Mod1+l       exec playerctl -p vlc position 10+
    bindsym Mod1+Shift+j exec playerctl -p vlc previous
    bindsym Mod1+Shift+k exec playerctl -p vlc stop
    bindsym Mod1+Shift+l exec playerctl -p vlc next
