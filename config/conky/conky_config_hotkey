conky.config = {
	alignment = 'bottom_left',
	background = true,
	use_xft = true,
	font = 'DroidSanMono Nerd Font:size=12',
	color2 = '#2e9ef4',
	default_color = '#FFFFFF',
    default_outline_color = '#FFFFFF',
    default_shade_color = '#000000',
    draw_shades = true,
    draw_borders = false,
    draw_graph_borders = false,
    draw_outline = false,
	gap_x = 25,
	gap_y = 25,
	minimum_width = 280,
	maximum_width = 280,
	double_buffer = true,
	no_buffers = true,
	own_window = true,
    own_window_class = 'Conky',
	own_window_type = 'override',
	own_window_transparent = true,
	wn_window_argb_visual = true,
	own_window_argb_value = 255,
    update_interval = 0.001,
}
conky.text = [[
${color}[System Command] ${hr 2}
${color2}open terminal ${color}[S]+[Enter]
${color2}system option ${color}[S]+[Shift]+[Esc]
${color2}reload/restart i3 ${color}[S]+[Shift]+[r]
${color2}exit i3 session ${color}[S]+[Shift]+[e]
${color2}application (rofi) ${color}[S]+[d]
${color2}window selector (rofi) ${color}[S]+[u]
${color}[Workspace / Container] ${hr 2}
${color2}navigate to WS ${color}[S]+[\#]
${color2}send focus to WS ${color}[S]+[Shift]+[\#]
${color2}kill focused ${color}[S]+[Shift]+[q]
${color2}split direction toggle ${color}[S]+[q]
${color2}tab mode toggle ${color}[S]+[w]
${color2}stack mode toggle ${color}[S]+[s]
${color2}tiling mode toggle ${color}[S]+[e]
${color2}fullscreen toggle ${color}[S]+[f]
${color2}navigate to ${color}[S]+[vim-key]
${color2}swap to ${color}[S]+[Shift]+[vim-key]
${color2}focus parent ${color}[S]+[a]
${color2}focus children ${color}[S]+[Shift]+[a]
${color}[Floating / Scratchpad] ${hr 2}
${color2}floating toggle ${color}[S]+[Shift]+[Space]
${color2}focus toggle ${color}[S]+[Space]
${color2}sticky toggle ${color}[S]+[Shift]+[s]
${color2}move to scratchpad ${color}[S]+[-]
${color2}move to foreground ${color}[S]+[=]
${color}[User-defined Mode] ${hr 2}
${color2}gap mode ${color}[S]+[Shift]+[g]
${color2}titlebar mode ${color}[S]+[Shift]+[t]
${color2}mouse mode ${color}[S]+[Shift]+[m]
${color2}redshift mode ${color}[S]+[Shift]+[z]
${color2}resize mode ${color}[Ctrl]+[Alt]+[r]
${color2}wallpaper mode ${color}[Ctrl]+[Alt]+[w]
${color}[Miscellaneous] ${hr 2}
${color2}quick lock ${color}[Ctrl]+[Alt]+[Shift]+[l]
${color2}quick resize ${color}[Ctrl]+[Alt]+[vim-key]
${color2}quick titlbar toggle ${color}[S]+[t]
${color2}quick mark window ${color}[S]+[m]
${color2}goto window with mark ${color}[S]+g
${color2}swap window with mark ${color}[S]+p
${color2}rename workspace ${color}[S]+[Shift]+[w]
${color2}exec i3 command ${color}[S]+[Shift]+[i]
${color2}toggle i3bar state ${color}[S]+[Shift]+[b]
]]
