bindsym $mod+Shift+a focus child

# Marks on titlebar
show_marks yes
# read "1" character and mark the current window with this character
# read "1" character and go to the window with the character
# read "1" character and swap the current window to the window with the character
# Use i3-msg as input
bindsym $mod1+m exec i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod1+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '
bindsym $mod1+p exec i3-input -F 'swap container with mark %s' -l 1 -P 'Swapto: '
# Use rofi as input
bindsym $mod+m exec i3-msg mark $(rofi -dmenu -lines 0 -p 'Mark')
bindsym $mod+g exec i3-msg [con_mark="$(rofi -dmenu -lines 0 -p 'Goto [Mark]')"] focus
bindsym $mod+p exec i3-msg swap container with mark $(rofi -dmenu -lines 0 -p 'Swapto [Mark]')

