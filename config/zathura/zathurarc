### Settings from original zathurarc ###
set adjust-open "best-fit"
set pages-per-row 1
set font "DroidSansMono Nerd Font Bold 12"
set guioptions 'shv'
set selection-clipboard clipboard
set scroll-page-aware "true"
set sandbox none
map <C-j> zoom in
map <C-k> zoom out

### zathura-pywal ###
# Allow recolor
set recolor "true"

# Don't allow original hue when recoloring
set recolor-keephue "false"

# Don't keep original image colors while recoloring
set recolor-reverse-video "false"

# Command line completion entries
set completion-fg "#c0c0c0"
set completion-bg "#040506"

# Command line completion group elements
set completion-group-fg "#465C63"
set completion-group-bg "#040506"

# Current command line completion element
set completion-highlight-fg "#040506"
set completion-highlight-bg "#c0c0c0"

# Default foreground/background color
set default-bg rgba(4,5,6,0.7)

# Input bar
set inputbar-fg "#c0c0c0"
set inputbar-bg "#040506"

# Notification
set notification-fg "#c0c0c0"
set notification-bg "#040506"

# Error notification
set notification-error-fg "#c0c0c0"
set notification-error-bg "#445359"

# Warning notification
set notification-warning-fg "#c0c0c0"
set notification-warning-bg "#445359"

# Tab - TODO
# set tabbar-fg
# set tabbar-bg

# Focused tab - TODO
# set tabbar-focus-fg
# set tabbar-focus-bg

# Status bar
set statusbar-fg "#c0c0c0"
set statusbar-bg "#040506"

# Highlighting parts of the document (e.g. show search results)
set highlight-color "#465C63"
set highlight-active-color "#465C63"

# Represent light/dark colors in recoloring mode
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor "#c0c0c0"

# "Loading..." text
set render-loading-fg "#c0c0c0"
set render-loading-bg "#040506"

# Index mode
set index-fg "#c0c0c0"
set index-bg "#040506"

# Selected element in index mode
set index-active-fg "#040506"
set index-active-bg "#c0c0c0"