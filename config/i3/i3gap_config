# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# The middle button over a titlebar kills the window
# The middle button and a modifer over any part of the window kills the window
bindsym --release button2 kill
bindsym --whole-window $mod+button2 kill

# The right button toggles floating
bindsym --release button3 floating toggle exec notify-send -u low "Toggle Window Floating"
bindsym --whole-window $mod+button3 floating toggle exec notify-send -u low "Toggle Window Floating"

# Scratchpad: hide | show window(minus is "-" and plus is "+".)
bindsym $mod+minus move scratchpad
bindsym mod1+minus move scratchpad
bindsym $mod+plus scratchpad show
bindsym mod1+plus scratchpad show

# Move all floating windows to the scratchpad and vice versa
bindsym $mod+x [floating] move scratchpad
bindsym mod1+x [floating] move scratchpad
bindsym $mod+Shift+x [class=.*] scratchpad show
bindsym mod1+Shift+x [class=.*] scratchpad show

