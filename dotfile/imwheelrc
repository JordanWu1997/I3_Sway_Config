# .imwheelrc
# Configuration for mouse wheel speed (Only on X-server)

# Speed up scrolling for google chrome
"^brave-browser$"
    None, Up, Button4, 2
    None, Down, Button5, 2
    Shift_L,   Up,   Shift_L|Button4, 2
    Shift_L,   Down, Shift_L|Button2, 2
    Control_L, Up,   Control_L|Button4
    Control_L, Down, Control_L|Button5

# Speed up scrolling for google chrome
"^google-chrome$"
    None, Up, Button4, 2
    None, Down, Button5, 2
    Shift_L,   Up,   Shift_L|Button4, 2
    Shift_L,   Down, Shift_L|Button2, 2
    Control_L, Up,   Control_L|Button4
    Control_L, Down, Control_L|Button5

# Speed up scrolling for firefox
"^Firefox$"
    None, Up, Button4, 2
    None, Down, Button5, 2
    Shift_L,   Up,   Shift_L|Button4, 2
    Shift_L,   Down, Shift_L|Button2, 2
    Control_L, Up,   Control_L|Button4
    Control_L, Down, Control_L|Button5

# Speed up scrolling fo mendeleydesktop
"^Mendeley Desktop$"
    None, Up, Button4, 5
    None, Down, Button5, 5
    Shift_L,   Up,   Shift_L|Button4, 5
    Shift_L,   Down, Shift_L|Button5, 5
    Control_L, Up,   Control_L|Button4
    Control_L, Down, Control_L|Button5

# Default for applications
".*"
    None, Up, Button4, 1
    None, Down, Button5, 1
    Shift_L,   Up,   Shift_L|Button4, 1
    Shift_L,   Down, Shift_L|Button5, 1
    Control_L, Up,   Control_L|Button4
    Control_L, Down, Control_L|Button5
